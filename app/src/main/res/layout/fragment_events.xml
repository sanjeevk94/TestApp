<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/no_events"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="'Currently there are no events'"
        android:textStyle="italic"
        android:textSize="24sp"
        android:textColor="@color/textColorFragDef"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/friends_event_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.sa90.materialarcmenu.ArcMenu
        android:id="@+id/event_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        app:menu_color="@color/colorPrimaryDark"
        app:menu_open="arc_left"
        app:menu_scr="@drawable/ic_fab_event_note_white_24dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_white_24dp"
            app:backgroundTint="@color/colorPrimaryDark" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/list_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fab_event_available_white_24dp"
            app:backgroundTint="@color/colorPrimaryDark" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/edit_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fab_edit_white_24dp"
            app:backgroundTint="@color/colorPrimaryDark" />

    </com.sa90.materialarcmenu.ArcMenu>

</RelativeLayout>